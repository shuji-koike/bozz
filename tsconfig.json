{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "typeRoots": [
      "./app/types"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "config-overrides.js"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  },
  "files": [
    "app/types/index.d.ts"
  ]
}
